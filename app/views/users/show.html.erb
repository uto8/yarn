<div class="row mb-5">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 col-12">
    <div class="card shadow-lg pb-3">
      <div class="card-header">
        ユーザー
      </div>
      <div class="card-body">
        <div class="row">
          <% if @user.image.attached? %>
            <%= image_tag @user.image, class:"w-100 mb-2" %>
          <% end %>
        </div>
        <div class="mb-4">
          名前：<%= @user.name %><br>
          生年月日：<%= @user.birthday %><br>
          性別：<%= @user.gender %>
        </div>
        <% unless license_checked? %>
        <h5>年齢確認が必要です。</h5><br><p>関連法規に基づき、年齢確認をしています。</p>
        <%= link_to "身分証提示", new_license_approval_path %>
      <% end %>
      </div>
    </div>
    <div class="p-3 mb-5">
      <% if current_user == @user %>
        <div class="text-center">
        <%= link_to "編集する", edit_user_path(@user), class:"btn btn-dark shadow" %>
        </div>
      <% else %>
        <div id="user_<%= @user.id %>" class="follow-wrapper text-center">
          <%= render 'follow_form', user: @user if signed_in? %>
        </div>
      <% end %>
    </div>
    <% if @user == current_user%>
      <% if @events.present? %>
      <div class="card shadow-lg pb-3">
        <div class="card-header">
          イベント
        </div>
        <% @events.each do |event| %>
        <div class="card-body d-flex justify-content-between">
          <%= event.title %>
          <div>
            <%= link_to "詳細", event_path(event), class:"btn-sm btn-dark shadow" %>
            <%= link_to "編集", edit_event_path(event), class:"btn-sm btn-dark shadow" %>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-lg-3"></div>
</div>

