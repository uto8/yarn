<div class="row">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 col-12">
    <div class="card shadow-lg pt-3 pb-3">
      <div class="card-body">
        <%= form_with model: @user, url: user_path(@user), local: true do |f| %>
          <div class="form-group">
            <%= f.fields_for :user_files do |i| %>
              <%= i.file_field :file, multiple: true, name: "user_files[file][]" %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, class:"form-control" %>
          </div>  
          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class:"form-control" %>
          </div>
          <div class="actions text-center mb-4">
            <%= f.submit "変更する", class:"btn shadow" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-lg-3"></div>
</div>

