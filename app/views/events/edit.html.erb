<div class="row mb-5">
  <div class="col-lg-3"></div>
  <div class="col-lg-6 col-12">
    <div class="card shadow-lg pt-3 pb-3 mb-4">
      <div class="card-body">
        <%= form_for(@event, url:{controller:'events', action: 'update',id:@event.id}) do |f| %>
          <%#= render 'shared/error_messages', model: f.object %>
          <%= f.hidden_field :user_id, :value => current_user.id %>
          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class:"form-control" %>
          </div> 
          <div class="form-group">
            <%= f.label :address, "場所" %>
            <%= f.text_field :address, class:"form-control" %>
          </div> 
          <div class="form-group" id='detail-association-insertion-point'>
            <%= f.label :event_users, "参加者" %>
            <%= f.fields_for :event_users do |event_user| %>
              <%= render 'event_user_fields', f: event_user %>
            <% end %>
            <div class="add-association">
              <%= link_to_add_association f, :event_users, class: "btn btn-outline-dark" do %>
                追加
              <% end %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :message, "メッセージ" %>
            <%= f.text_area :message, class:"form-control" %>
          </div>
          <div class="actions text-center">
            <%= f.submit "募集する",class:"btn shadow" %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
  <div class="col-lg-3"></div>
</div>
