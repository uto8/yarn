<div class="action text-right p-2">
  <%= link_to "募集する", new_event_path, class:"btn btn-dark shadow" %>
</div>
<div class="row">
  <% @events.each do |event| %>
    <div class="col-12 col-lg-4 mb-4">
      <div class="card shadow">
        <div class="img">
          <% if event.image.attached? %>
            <%= image_tag event.image, class:"w-100 mb-2" %>
          <% else %>
            <%= image_tag 'favicon.jpg', class:"img-logo" %>
          <% end %>
        </div>
          <div class="card-body">
            <h5 class="card-title"><%= event.user.name %>　<%= calc_age(event.user.birthday) %>歳</h5>
            <p><%= event.address_i18n %></p>
            <%= link_to "プロフィールを見る", user_path(event.user), class: "btn btn-dark" %>
          </div>
        </div>
    </div>
  <% end %>
</div>
<style>
.img{
  height: 400px;
}
.img img{
  height: 100%;
  max-height: 100%;
  object-fit: cover;
  width: 100%;
}
</style>
